#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_browser-sync@2.18.13@browser-sync/bin/browser-sync.js" "$@"
  ret=$?
else 
  node  "$basedir/../_browser-sync@2.18.13@browser-sync/bin/browser-sync.js" "$@"
  ret=$?
fi
exit $ret
